{
  "name": "@tne/nodejs-app",
  "description": "TNE - NodeJs base application",
  "version": "1.2.1",
  "license": "MIT",
  "preferGlobal": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=6.14.4",
    "npm": ">=3.10.10"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/virgenherrera/tne-nodejs-app"
  },
  "keywords": [
    "typescript",
    "node",
    "@tne/logger"
  ],
  "author": "Hugo Virgen",
  "contributors": [
    {
      "name": "Hugo Virgen",
      "email": "virgenherrera@gmail.com",
      "url": "https://github.com/virgenherrera/"
    }
  ],
  "homepage": "https://github.com/virgenherrera/tne-nodejs-app#readme",
  "bugs": {
    "url": "https://github.com/virgenherrera/tne-nodejs-app/issues"
  },
  "scripts": {
    "test": "nyc mocha",
    "prepublish": "npm run build",
    "build": "npm run cleanup && npm run test && npm run tsc",
    "cleanup": "rimraf dist .nyc_output coverage",
    "tslint": "./node_modules/.bin/tslint -c ./tslint.json -p ./tsconfig.json",
    "tsc": "./node_modules/.bin/tsc",
    "tsc:watch": "./node_modules/.bin/tsc -w --sourceMap"
  },
  "dependencies": {
    "@tne/common": "^1.0.0",
    "@tne/logger": "^1.2.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.5",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.5.8",
    "@types/rimraf": "^2.0.2",
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "nyc": "^13.0.1",
    "rimraf": "^2.6.2",
    "source-map-support": "^0.5.9",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "typescript": "^3.0.3"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "test/**",
      "coverage/**",
      "dist/**"
    ],
    "reporter": [
      "cobertura",
      "html",
      "text-summary"
    ],
    "all": true
  }
}
